<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/back"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="50dp"
            android:text="       SeeLook"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFD186"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/worldwide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="   #HOT"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="410dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView7"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

                <VideoView
                    android:id="@+id/videoView8"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

                <VideoView
                    android:id="@+id/videoView9"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView4"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

                <VideoView
                    android:id="@+id/videoView5"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

                <VideoView
                    android:id="@+id/videoView6"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"

                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />


                <VideoView
                    android:id="@+id/videoView2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

                <VideoView
                    android:id="@+id/videoView3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"

                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView10"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />


                <VideoView
                    android:id="@+id/videoView11"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

                <VideoView
                    android:id="@+id/videoView12"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="3.5dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="424dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994">

        <Button
            android:id="@+id/home_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.529"></Button>

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.86"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52"></Button>

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="188dp"
            android:layout_marginRight="188dp"
            android:background="@drawable/upload"
            android:onClick="done_clicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.526"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>