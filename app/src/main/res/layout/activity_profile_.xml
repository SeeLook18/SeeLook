            android:layout_height="130dp" />

        <VideoView
            android:id="@+id/videoView8"
            android:layout_margin="3.5dp"
            android:padding="3dp"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <VideoView
            android:id="@+id/videoView9"
            android:layout_margin="3.5dp"
            android:padding="3dp"
            android:layout_width="130dp"
            android:layout_height="130dp" />
    </LinearLayout>

</LinearLayout>