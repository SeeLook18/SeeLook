<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="SeeLook"
        android:textStyle="bold|italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFD186"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/worldwide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="   #My Seelook"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:textColor="#FFD099"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"

        android:orientation="horizontal">

        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />


        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/videoView4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/videoView7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView9"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/home_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:background="@drawable/home"
            android:textColor="#FFD186"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/upload"
            android:textColor="#FFD186"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.505" />

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/profile"
            android:textColor="#FFD186"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.163" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>