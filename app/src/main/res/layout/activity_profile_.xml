<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFD186"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="SeeLook"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/worldwide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:textColor="@android:color/black"
        android:text="   My Seelook"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"

        android:orientation="horizontal">

        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />


        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/videoView4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/videoView7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />

        <VideoView
            android:id="@+id/videoView9"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="3.5dp"
            android:padding="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="57dp"
            android:layout_height="43dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            app:layout_constraintVertical_bias="0.065" />
    </LinearLayout>

</LinearLayout>